{
  "name": "next-page-tester",
  "description": "Enable DOM integration testing on Next.js pages",
  "version": "0.10.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!__tests__"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc",
    "test": "jest ./src",
    "test:source": "npm run lint && npm run test:ts && npm t -- --coverage",
    "test:ts": "tsc --noEmit",
    "prepare": "npm run test:source && npm run compile",
    "preversion": "npm run prepare",
    "version": "git add package.json",
    "postversion": "git push && git push --tags",
    "lint": "concurrently \"npm run prettier\" \"npm run eslint\"",
    "eslint": "eslint --max-warnings 0 --ext .ts,.tsx,.js,.jsx 'src'",
    "prettier": "prettier -l 'src/**/*'",
    "prettier:fix": "prettier -l 'src/**/*' --write"
  },
  "keywords": [
    "next",
    "nextjs",
    "test",
    "testing",
    "dom",
    "ui",
    "unit",
    "integration",
    "routing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toomuchdesign/next-pages-tester.git"
  },
  "author": "Andrea Carraro <me@andreacarraro.it>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@testing-library/user-event": "12.5.0",
    "@types/find-root": "1.1.2",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.13",
    "@types/normalize-path": "3.0.0",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/webpack": "4.41.25",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "26.6.3",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "4.3.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "next": "10.0.3",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "6.13.0",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "@types/express": "^4.17.8",
    "fast-glob": "^3.2.4",
    "find-root": "^1.1.0",
    "node-mocks-http": "^1.9.0",
    "normalize-path": "^3.0.0"
  },
  "peerDependencies": {
    "next": "^10.0.0",
    "react": "^16.6.0 || ^17"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "__fixtures__"
    ],
    "coveragePathIgnorePatterns": [
      "__tests__"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "./src/__tests__/setup.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,ts,tsx}": [
      "prettier",
      "npm run test:source -- ."
    ],
    "**/*.{md}": [
      "prettier"
    ]
  }
}
